<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray5"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/llMyInfo"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/selector_common_item"
        android:gravity="center_vertical"
        android:paddingRight="6px">

    <ImageView
        android:id="@+id/result_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="@dimen/option_item_margin_right"
        android:scaleType="centerCrop"
        android:src="@mipmap/fitness"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="@dimen/option_item_margin_right" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="0dp"
        android:layout_height="140px"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/show_result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6px"
            android:singleLine="true"
            android:textColor="@color/gray0"
            android:textSize="30px"/>

        <TextView
            android:id="@+id/show_date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6px"
            android:singleLine="true"
            android:textColor="@color/gray2"
            android:textSize="26px"/>

    </com.zhy.autolayout.AutoLinearLayout>
 
    
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
