<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray5"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/moment_header"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="@dimen/option_item_margin_right"
            android:scaleType="centerCrop"
            android:src="@mipmap/header"/>
        <TextView
            android:id="@+id/moment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Username"
            android:textColor="@color/blue0"
            android:textSize="15sp"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="150px"
        android:layout_marginRight="@dimen/option_item_margin_right"
        >
        <TextView
            android:id="@+id/moment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="这是我的第一次分享..."
            android:textSize="15sp"/>
        <ImageView
            android:id="@+id/moment_image"
            android:layout_marginTop="5dp"
            android:layout_width="160dp"
            android:layout_height="160dp"
            />

    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

</com.zhy.autolayout.AutoLinearLayout>