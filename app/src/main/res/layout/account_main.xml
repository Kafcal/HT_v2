<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray5"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/llMyInfo"
        android:layout_width="match_parent"
        android:layout_height="178px"
        android:layout_marginTop="@dimen/option_item_margin_top"
        android:background="@drawable/selector_common_item"
        android:gravity="center_vertical"
        android:paddingRight="6px">

        <ImageView
            android:id="@+id/ivHeader"
            android:layout_width="140px"
            android:layout_height="140px"
            android:layout_marginLeft="30px"
            android:layout_marginRight="@dimen/option_item_margin_right"
            android:scaleType="centerCrop"
            android:src="@mipmap/header"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="140px"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6px"
                android:singleLine="true"
                android:text="Usrname"
                android:textColor="@color/gray0"
                android:textSize="30px"/>

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6px"
                android:singleLine="true"
                android:text="Email"
                android:textColor="@color/gray2"
                android:textSize="26px"/>

        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.lqr.optionitemview.OptionItemView
        android:id="@+id/account_record"
        style="@style/OptionItem"
        android:layout_marginTop="@dimen/option_item_margin_top"
        android:background="@drawable/selector_common_item"
        app:left_image_margin_left="@dimen/option_item_margin_left"
        app:left_image_margin_right="@dimen/option_item_margin_right"
        app:left_src="@mipmap/record_icon"
        app:left_text="记录"
        app:left_text_color="@color/black0"
        app:left_text_size="16sp"
        app:right_image_margin_right="40px"
        app:right_src="@drawable/right_arrow"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            style="@style/Line"
            android:layout_marginLeft="@dimen/option_item_margin_left"
            android:layout_marginRight="@dimen/option_item_margin_right"
            />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.lqr.optionitemview.OptionItemView
        android:id="@+id/account_help"
        style="@style/OptionItem"
        android:background="@drawable/selector_common_item"
        app:left_image_margin_left="@dimen/option_item_margin_left"
        app:left_image_margin_right="@dimen/option_item_margin_right"
        app:left_src="@mipmap/help"
        app:left_text="帮助"
        app:left_text_color="@color/black0"
        app:left_text_size="16sp"
        app:right_image_margin_right="40px"
        app:right_src="@drawable/right_arrow"/>

    <com.lqr.optionitemview.OptionItemView
        android:id="@+id/myWeb"
        style="@style/OptionItem"
        android:layout_marginTop="@dimen/option_item_margin_top"
        android:background="@drawable/selector_common_item"
        app:left_image_margin_left="@dimen/option_item_margin_left"
        app:left_image_margin_right="@dimen/option_item_margin_right"
        app:left_src="@mipmap/home_icon"
        app:left_text="主页"
        app:left_text_color="@color/black0"
        app:left_text_size="16sp"
        app:right_image_margin_right="40px"
        app:right_src="@drawable/right_arrow"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            style="@style/Line"
            android:layout_marginLeft="@dimen/option_item_margin_left"
            android:layout_marginRight="@dimen/option_item_margin_right"
            />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.lqr.optionitemview.OptionItemView
        android:id="@+id/shareApp"
        style="@style/OptionItem"
        android:background="@drawable/selector_common_item"
        app:left_image_margin_left="@dimen/option_item_margin_left"
        app:left_image_margin_right="@dimen/option_item_margin_right"
        app:left_src="@mipmap/share"
        app:left_text="分享体型测试App"
        app:left_text_color="@color/black0"
        app:left_text_size="16sp"
        app:right_image_margin_right="40px"
        app:right_src="@drawable/right_arrow"/>

    <com.lqr.optionitemview.OptionItemView
        android:id="@+id/oivEmoji"
        style="@style/OptionItem"
        android:layout_marginTop="@dimen/option_item_margin_top"
        android:background="@drawable/selector_common_item"
        android:visibility="gone"
        app:left_image_margin_left="@dimen/option_item_margin_left"
        app:left_image_margin_right="@dimen/option_item_margin_right"
        app:left_src="@mipmap/ic_emo_yellow"
        app:left_text="@string/emotion"
        app:left_text_color="@color/black0"
        app:left_text_size="16sp"
        app:right_image_margin_right="40px"
        app:right_src="@drawable/right_arrow"/>

    <com.lqr.optionitemview.OptionItemView
        android:id="@+id/account_contact"
        style="@style/OptionItem"
        android:layout_marginTop="@dimen/option_item_margin_top"
        android:background="@drawable/selector_common_item"
        android:clickable="true"
        app:left_image_margin_left="@dimen/option_item_margin_left"
        app:left_image_margin_right="@dimen/option_item_margin_right"
        app:left_src="@mipmap/contact"
        app:left_text="联系开发者"
        app:left_text_color="@color/black0"
        app:left_text_size="16sp"
        app:right_image_margin_right="40px"
        app:right_src="@drawable/right_arrow"
        />

</com.zhy.autolayout.AutoLinearLayout>