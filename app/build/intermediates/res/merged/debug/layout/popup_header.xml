<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/gray6">

    <com.lqr.optionitemview.OptionItemView
        android:id="@+id/choose_from_camera"
        style="@style/OptionItem"
        android:background="@drawable/selector_option_item"
        app:left_text="拍照"
        app:left_text_color="@color/black0"
        app:left_text_margin_left="40px"
        app:left_text_size="16sp"
        app:right_src="@drawable/right_arrow"
        app:right_image_margin_right="40px"
        />

    <View
        style="@style/Line"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        />

    <com.lqr.optionitemview.OptionItemView
        android:id="@+id/choose_from_album"
        style="@style/OptionItem"
        android:background="@drawable/selector_option_item"
        app:left_text="相册"
        app:left_text_color="@color/black0"
        app:left_text_margin_left="40px"
        app:left_text_size="16sp"
        app:right_src="@drawable/right_arrow"
        app:right_image_margin_right="40px"
        />

    <View
        style="@style/Line"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        />

    <com.lqr.optionitemview.OptionItemView
        android:id="@+id/header_cancel"
        style="@style/OptionItem"
        android:background="@drawable/selector_option_item"
        app:left_text="取消"
        app:left_text_color="@color/black0"
        app:left_text_margin_left="40px"
        app:left_text_size="16sp"
        app:right_src="@drawable/right_arrow"
        app:right_image_margin_right="40px"
        />


</com.zhy.autolayout.AutoLinearLayout>