<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <include layout="@layout/include_toolbar"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="30px"
                    android:paddingRight="30px">

                    <TextView
                        android:layout_width="120px"
                        android:layout_height="wrap_content"
                        android:text="@string/nickname"
                        android:textColor="@color/black0"
                        android:textSize="28px"/>

                    <EditText
                        android:id="@+id/edit_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="例如：陈晨"
                        android:textColorHint="@color/gray3"
                        android:textSize="28px"/>

                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    android:id="@+id/vLineNick"
                    style="@style/Line"
                    />
            </com.zhy.autolayout.AutoLinearLayout>

            <ImageView
                android:id="@+id/ivAlbum"
                android:layout_width="100px"
                android:layout_height="100px"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            style="@style/Line"
            />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="30px"
            android:paddingRight="30px">

            <TextView
                android:id="@+id/tvAreaCode"
                android:layout_width="120px"
                android:layout_height="wrap_content"
                android:text="邮箱"
                android:textColor="@color/black0"
                android:textSize="28px"/>

            <EditText
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="你的邮箱"
                android:inputType="textEmailAddress"
                android:text=""
                android:textColorHint="@color/gray3"
                android:textSize="28px"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <View
            style="@style/Line"
            />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="30px"
            android:paddingRight="30px">

            <TextView
                android:layout_width="120px"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textColor="@color/black0"
                android:textSize="28px"/>

            <com.gc.materialdesign.views.CheckBox
                android:id="@+id/cbx_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                materialdesign:check="true"
                android:background="#1E88E5"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:textSize="28px"/>

            <com.gc.materialdesign.views.CheckBox
                android:id="@+id/cbx_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#1E88E5"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"
                android:textSize="28px"/>


        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:id="@+id/vLinePhone"
            style="@style/Line"
            />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="30px"
                android:paddingRight="30px">

                <TextView
                    android:layout_width="120px"
                    android:layout_height="wrap_content"
                    android:text="@string/password"
                    android:textColor="@color/black0"
                    android:textSize="28px"/>

                <EditText
                    android:id="@+id/edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="56px"
                    android:background="@null"
                    android:hint="填写密码"
                    android:inputType="textPassword"
                    android:text=""
                    android:textColorHint="@color/gray3"
                    android:textSize="28px"/>

            </com.zhy.autolayout.AutoLinearLayout>

            <ImageView
                android:id="@+id/ivSeePwd"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20px"
                android:src="@mipmap/ic_see_pwd"/>
        </com.zhy.autolayout.AutoRelativeLayout>


        <View
            android:id="@+id/vLinePwd"
            style="@style/Line"
            />



        <View
            android:id="@+id/vLineVertifyCode"
            style="@style/Line"
            />

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="30px"
            android:layout_marginTop="40px"
            android:background="#1E88E5"
            android:text="注册"
            />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40px"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_has_account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10px"
                    android:text="已有账号?"
                    android:textColor="@color/blue0"
                    android:textSize="28px"/>

            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>


    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>
